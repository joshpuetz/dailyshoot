<h2><%= link_to(image_tag(@photog.profile_image_url), @photog.twitter_url) %> <%= link_to "@#{@photog.screen_name}", @photog.twitter_url %> has tweeted <%= @photog.photos.count %> daily shoot assignments.</h2>

<div class="span-24" id="photowall">	
<% @photog.photos.with_assignment.in_groups_of(10).each do |row| -%>
  <% content_tag :div, :class => 'row' do -%>
    <% row.each do |photo| -%>
      <% next if photo == nil -%>
      <% content_tag :div, :class => 'photo-thumb' do -%>


        <%= link_to image_tag(photo.thumb_url, :alt => photo.url), photo.url, :title => "", :rel => 'nofollow', :popup => true %>
        <% content_tag :div, :class => 'photo-caption' do -%>
           <%= link_to photo.assignment_tag, assignment_url(photo.assignment_id) %>
        <% end -%>
      <% end -%>
	<% end -%>
  <% end -%>
  <br clear="all">
<% end -%>
</div> <!-- end photowall -->