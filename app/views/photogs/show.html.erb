<h2><%= link_to(image_tag(@photog.profile_image_url), @photog.twitter_url) %> <%= link_to @photog.screen_name, @photog.twitter_url %></h2>

<div class="photos clearfix">
<% @photog.photos.each do |photo| -%>
  <% content_tag :div, :class => 'photo-thumb' do -%>
    <%= link_to image_tag(photo.thumb_url, :alt => photo.url), 
                photo.url, :title => "", :rel => 'nofollow', :popup => true %>
  <% end -%>
<% end -%>
</div>
