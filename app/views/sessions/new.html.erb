<div id="login" class="span-14 append-10 last">

<% form_tag(:session, :url => session_path) do -%>
<fieldset>
  <p>
    <%= label_tag :login, 'Login or E-mail' %>
    <%= text_field_tag :login, params[:login], :size => 20 %>
  </p>
  <p>
    <%= label_tag :password, 'Password' %>
    <%= password_field_tag :password, params[:password], :size => 20 %>
  </p>
  <p>
	  <%= submit_tag 'Log In' %>
	</p>
</fieldset>	
<% end -%>

</div>