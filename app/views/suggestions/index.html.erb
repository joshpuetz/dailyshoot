<h1>Suggestions</h1>

<table id="suggestions" border="0" cellpadding="0" cellspacing="0">
<% @suggestions.each do |suggestion| -%>
  <tr>
    <td class="who">
      <%= link_to suggestion.who, suggestion %>
    </td>
    <td class="what">
      <%= h suggestion.what %>
    </td>
    <td>
      <%= link_to 'Destroy', suggestion, :confirm => 'Are you sure?', 
                                         :method => :delete %>
    </td>
  </tr>
<% end -%>
</table>
